pipeline {
    agent any
    
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'develop',url: 'https://github.com/RincyIssac/rincyrepo.git'
	        }
        }        
        stage('Requirements') {
            steps {
                echo 'Installing dependencies...'
                sh 'pip3 install -r requirements.txt'
                sh 'python3 project/init/init_db.py'
            }
        }
        stage('Unit/Integration tests') {
            steps {
                echo 'Unit/Integration...'
                sh 'python3 -m unittest discover -s tests/unit -v'
            }
        }        
        stage('Acceptance tests') {
            steps {
                echo 'Acceptance..'
                sh 'python3 -m unittest discover -s tests/acceptance-flask -v'
            }
        }     
        stage('Create image') {
            steps {
                echo 'creating image...'
                //sh 'docker build -t rincyapp:v2  -f Dockerfile .'
                sh 'docker build -t rincy123.azurecr.io/rincyapp:v1 Dockerfile .'
            }
        } 
    }
    post {
        always {
            echo 'post do this always...'
        }
        success{
            echo 'post do this when success...'
        }
        failure {
            echo 'post do this when failure...'
        }
        cleanup{
            echo 'post do this when cleanup...'
            deleteDir()
        }
    }
}
